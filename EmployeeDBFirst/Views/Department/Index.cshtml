@model IEnumerable<EmployeeDBFirst.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentAbbr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentAbbr)
            </td>
            <td class="btn-group">
                    <a class="btn btn-warning m-1" asp-action="Edit" asp-route-id="@item.DepartmentId">Edit</a>
                    <a class="btn btn-primary m-1" asp-action="Details" asp-route-id="@item.DepartmentId">Details</a>
                    <a class="btn btn-danger m-1" asp-action="Delete" asp-route-id="@item.DepartmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
